# ===== CONFIGURACIÓN DE PRODUCCIÓN - PARSE =====
# Copia este archivo como .env en el servidor y configura los valores

# ===== BASE DE DATOS =====
DATABASE_URL="postgresql://usuario:password@host:5432/parse_db"

# ===== SEGURIDAD =====
JWT_SECRET="cambiar-por-un-secret-muy-largo-y-aleatorio-en-produccion"
JWT_EXPIRES_IN="7d"

# ===== SERVIDOR =====
PORT=5100
NODE_ENV="production"

# ===== URLs =====
BASE_URL="https://api.parsedemo.axiomacloud.com"
FRONTEND_URL="https://parsedemo.axiomacloud.com"

# ===== UPLOADS =====
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="uploads"

# ===== GOOGLE OAUTH (OPCIONAL) =====
# Si no usas login con Google, deja estos valores dummy
GOOGLE_CLIENT_ID="dummy-client-id"
GOOGLE_CLIENT_SECRET="dummy-client-secret"
GOOGLE_CALLBACK_URL="https://api.parsedemo.axiomacloud.com/api/auth/google/callback"

# ===== INTELIGENCIA ARTIFICIAL =====
# Activar extracción con IA
ENABLE_AI_EXTRACTION=true

# Claude Vision (RECOMENDADO para documentos)
USE_CLAUDE_VISION=true
ANTHROPIC_API_KEY="sk-ant-tu-api-key-aqui"

# Google Gemini (Alternativa, tiene free tier)
GEMINI_API_KEY="tu-gemini-api-key-aqui"

